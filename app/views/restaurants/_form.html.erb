<div class="container">
  <h1>Add your restaurant</h1>

  <%= simple_form_for(@restaurant) do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :category %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
